{
  "compilerOptions": {
    "target": "es2017", 
    "module": "commonjs",                           
    "lib": ["es6", "DOM"],                                   
    "allowJs": true,         
    "outDir": "./dist",                         
    "rootDir": "./src",
    "removeComments": true, 
    "strict": false,                                
    "baseUrl": "./",                            
    "esModuleInterop": true,                     
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true      
  },
  "include": [
      "src/**/*",
      "node_modules/puppeteer-tsd/src/index.d.ts"
  ]
}
